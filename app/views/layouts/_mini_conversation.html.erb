<div class="friendsList_box col-lg-4">
  <div class="icon">
    <!--<div class="image"><span class="glyphicon glyphicon-envelope btn-lg white"></span></div>-->
    <div class="info">
      <h3 class="title"><%= link_to 'Message', message_friend_path(current_user.username) %></h3>
      <div class="Friends">

        <% if @conversations != nil %>
            <ul class="media-list">
              <% @conversations.each do |conversation| %>
                  <li class="media">
                    <%= image_tag("http://placehold.it/50x50", class: "media-object pull-left") %>

                    <div class="media-body">
                      <%= link_to "Read!", conversation_path(conversation), class: 'conversation', 'data-cid' => conversation.id %>
                      <h4 class="media-heading"><%= conversation_interlocutor(conversation).username %></h4>

                      <p><%= conversation.messages.last.nil? ? "No messages" : truncate(conversation.messages.last.body, length: 45) %></p>
                    </div>
                  </li>

              <% end %>
            </ul>
        <% else %>
            <p>You have no conversations. Click message to create one.</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="space"></div>
</div>