<div class="row">

  <div class="col-lg-12">
    <h1 class="page-header">ALBUMS</h1>
  </div>


    <% @albums.each do |album| %>
      <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <h1><%= album.title %></h1>
        <p>"CREATED BY:<%= album.user.username %>"</p>
        <a class="thumbnail" href="<%= album_show_page_path(username: current_user.username, title: album.title) %>">
          <img class="img-responsive" src="http://placehold.it/400x300" alt="">
        </a>
        <%= link_to 'Edit', edit_album_path(album) %>
        <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %>
        <p><%= album.access %></p>
      </div>

        <%= album.user.username %>
        <%= album.title %>
        <%= album.access %>
        <%= link_to 'Edit', edit_album_path(album) %>
        <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %>

    <% end %>


<br>

<br/>

<%= link_to 'New Album', album_new_page_path(@album, username: current_user.username) %>
</div>