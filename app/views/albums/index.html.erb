<% if @user.username == current_user.username %>
    <p class="btn btn-success" type="submit">
      <%= link_to 'Create New Album', album_new_page_path(@album, username: current_user.username) %>
    </p>
<% end %>
<div class="row">

  <div class="col-lg-12">
    <h1 class="page-header"><%= @user.username %>'s Albums</h1>
  </div>



  <% @albums.each do |album| %>
      <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <h2 class="album_name_short">
          <%= image_tag 'photo_album_icon.svg' %>
          <%= album.title %>
          <span class="badge"><%= album.images.count %></span>
        </h2>
        <a class="thumbnail" href="<%= album_show_page_path(username: @user.username, title: album.title) %>">

          <% if album.images.count > 0 %>
              <img class="img-responsive" src="<%= album.images.first.attachment.url %>" alt="">
          <% else %>
              <img class="img-responsive" src="http://placehold.it/400x300" alt="">
          <% end %>

        </a>
      </div>

  <% end %>
</div>