<div class="user_listing media">
  <div class="media-left">
    <%= link_to user_profile_path(user.username) do %>
      <%= image_tag user.avatar.url(:icon), alt: user.username + ' profile image' %>
    <% end %>
  </div>
  <div class="media-body">
    <h3 class="media-heading"><%= link_to user.username, user_profile_path(user.username) %></h3>
    <span><%= user.first_name %> <%= user.last_name %></span>
  </div>
</div>
